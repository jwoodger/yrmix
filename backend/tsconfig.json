{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ES2015",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"],
	"typedocOptions": {
		"entryPoints": ["src/main.ts"],
		"exclude": ["node_modules/*"],
		"out": "docs/"
	}
}
